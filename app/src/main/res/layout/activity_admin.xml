<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminActivity">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/userEmail"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="175dp"
            android:autofillHints="" android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            android:hint="User Email"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addRide"
            android:text="Add Ride"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="180dp" android:layout_marginRight="180dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="180dp" android:layout_marginStart="180dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/rideId"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/rideId"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/userEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" android:hint="Ride Id"/>
</android.support.constraint.ConstraintLayout>